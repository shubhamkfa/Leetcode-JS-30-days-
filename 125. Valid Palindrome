function pal(word){
    let palindrome = word.replace(/[^a-zA-Z0-9]/g,'').toLowerCase()
    let result = palindrome.split('').reverse().join('')
    // console.log(result);
    
    return palindrome==result 

//for only printing the string 
    return result;


}

console.log(pal("A man, a plan, a canal: Panama"));


//Leetcode

/**
 * @param {string} s
 * @return {boolean}
 */
var isPalindrome = function(s) {
    let removechar= s.replace (/[^a-zA-Z0-9]/g,'').toLowerCase()
    let str = removechar.split('').reverse().join('')
    return removechar == str;
};
